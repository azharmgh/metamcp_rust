# MetaMCP Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================================
# Database Configuration (used by both Docker and application)
# ============================================================================

# PostgreSQL Docker container settings
POSTGRES_USER=metamcp
POSTGRES_PASSWORD=metamcp_dev_password
POSTGRES_DB=metamcp_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database connection string (constructed from above variables)
# Format: postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL=postgresql://metamcp:metamcp_dev_password@localhost:5432/metamcp_dev

# ============================================================================
# Security Configuration
# ============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-replace-with-random-string

# Encryption Key for API Keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-here-replace-with-random-hex

# ============================================================================
# Server Configuration
# ============================================================================

SERVER_HOST=127.0.0.1
SERVER_PORT=12009

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level - Options: error, warn, info, debug, trace
RUST_LOG=info,metamcp=debug

